<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPureWhite</item>
        <item name="colorPrimaryDark">@color/colorPureWhite</item>
        <item name="colorAccent">@color/colorCoolBlue</item>
        <item name="android:windowBackground">@color/colorPureWhite</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="titleTextColor">@color/colorFineGrey</item>
        <item name="android:textColorPrimary">@color/colorFineGrey</item>
        <item name="android:textColorSecondary">@color/colorFineGrey</item>
        <item name="android:statusBarColor">@color/colorPureWhite</item>
        <item name="alertDialogTheme">@style/AlertDialog.AppTheme.Light</item>
        <item name="android:textViewStyle">@style/SAITextViewStyle</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorGreaterGrey</item>
        <item name="colorPrimaryDark">@color/colorGreatGrey</item>
        <item name="colorAccent">@color/colorPerfectPink</item>
        <item name="android:windowBackground">@color/colorGreaterGrey</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/colorGreaterGrey</item>
        <item name="titleTextColor">@color/colorAlmostWhite</item>
        <item name="android:textColorPrimary">@color/colorAlmostWhite</item>
        <item name="android:textColorSecondary">@color/colorAlmostWhite</item>
        <item name="alertDialogTheme">@style/AlertDialog.AppTheme.Dark</item>
        <item name="android:textViewStyle">@style/SAITextViewStyle</item>
    </style>

    <style name="AppTheme.Simple.Dark" parent="AppTheme.Dark">
        <item name="colorPrimary">?attr/simpleThemePrimaryColor</item>
        <item name="colorPrimaryDark">?attr/simpleThemePrimaryColor</item>
        <item name="colorAccent">?attr/simpleThemeAccentColor</item>
        <item name="android:statusBarColor">?attr/simpleThemePrimaryColor</item>
        <item name="android:windowBackground">?attr/simpleThemePrimaryColor</item>
        <item name="titleTextColor">?attr/simpleThemeTextPrimaryColor</item>
        <item name="android:textColorPrimary">?attr/simpleThemeTextPrimaryColor</item>
        <item name="android:textColorSecondary">?attr/simpleThemeTextSecondaryColor</item>
        <item name="alertDialogTheme">@style/AlertDialog.AppTheme.Simple.Dark</item>
    </style>

    <style name="AppTheme.Simple.Light" parent="AppTheme.Light">
        <item name="colorPrimary">?attr/simpleThemePrimaryColor</item>
        <item name="colorPrimaryDark">?attr/simpleThemePrimaryColor</item>
        <item name="colorAccent">?attr/simpleThemeAccentColor</item>
        <item name="android:statusBarColor">?attr/simpleThemePrimaryColor</item>
        <item name="android:windowBackground">?attr/simpleThemePrimaryColor</item>
        <item name="titleTextColor">?attr/simpleThemeTextPrimaryColor</item>
        <item name="android:textColorPrimary">?attr/simpleThemeTextPrimaryColor</item>
        <item name="android:textColorSecondary">?attr/simpleThemeTextSecondaryColor</item>
        <item name="alertDialogTheme">@style/AlertDialog.AppTheme.Simple.Light</item>
    </style>

    <style name="AppTheme.Rena" parent="AppTheme.Simple.Dark">
        <item name="simpleThemePrimaryColor">@color/colorPrimaryRena</item>
        <item name="simpleThemeAccentColor">@color/colorAccentRena</item>
        <item name="simpleThemeTextPrimaryColor">@color/colorTextPrimaryRena</item>
        <item name="simpleThemeTextSecondaryColor">@color/colorTextSecondaryRena</item>
    </style>

    <style name="AppTheme.Rooter" parent="AppTheme.Simple.Dark">
        <item name="simpleThemePrimaryColor">@color/colorPrimaryRooter</item>
        <item name="simpleThemeAccentColor">@color/colorAccentRooter</item>
        <item name="simpleThemeTextPrimaryColor">@color/colorTextPrimaryRooter</item>
        <item name="simpleThemeTextSecondaryColor">@color/colorTextSecondaryRooter</item>
    </style>

    <style name="AppTheme.Omelette" parent="AppTheme.Simple.Dark">
        <item name="simpleThemePrimaryColor">@color/colorPrimaryOmelette</item>
        <item name="simpleThemeAccentColor">@color/colorAccentOmelette</item>
        <item name="simpleThemeTextPrimaryColor">@color/colorTextPrimaryOmelette</item>
        <item name="simpleThemeTextSecondaryColor">@color/colorTextSecondaryOmelette</item>
    </style>

    <style name="AppTheme.Pixel" parent="AppTheme.Simple.Light">
        <item name="simpleThemePrimaryColor">@color/colorPrimaryPixel</item>
        <item name="simpleThemeAccentColor">@color/colorAccentPixel</item>
        <item name="simpleThemeTextPrimaryColor">@color/colorTextPrimaryPixel</item>
        <item name="simpleThemeTextSecondaryColor">@color/colorTextSecondaryPixel</item>
    </style>

</resources>